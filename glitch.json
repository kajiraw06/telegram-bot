{
  "install": "npm install",
  "start": "node index.js",
  "watch": {
    "ignore": [
      "\\.git",
      "\\.data",
      "node_modules"
    ],
    "install": {
      "include": [
        "^package\\.json$"
      ]
    },
    "restart": {
      "include": [
        "\\.js$",
        "\\.json$"
      ]
    },
    "throttle": 1000
  }
}
